@{
    ViewData["Title"] = "Recomendar Productos";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Recommend" method="post">
  <div class="form-group">
    <label for="userId">UserId:</label>
    <input id="userId" name="userId" placeholder="UserId" class="form-control" />
  </div>
  <button type="submit" class="btn btn-primary mt-2">Recomendar</button>
</form>